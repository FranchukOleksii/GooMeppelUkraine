@model List<GooMeppelUkraine.Web.Models.Partner>
@{
    ViewData["Title"] = "Partners page";
    ViewData["MetaDescription"] = "Long-term shelter for Ukrainian refugees in Meppel.";
}

<h2>Manage Partners (@ViewBag.Lang)</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Create</a>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Logo</th>
            <th>Lang</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>
                    @if (!string.IsNullOrWhiteSpace(p.LogoUrl))
                    {
                        <img class="card-img-top" src="@p.LogoUrl" alt="@p.Name" />
                    }
                </td>
                <td>@p.Language</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>