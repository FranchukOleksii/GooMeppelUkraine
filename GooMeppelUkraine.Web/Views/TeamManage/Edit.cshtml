@model GooMeppelUkraine.Web.Models.TeamMember

<h2>Edit Team</h2>

<form method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Role</label>
        <input class="form-control" asp-for="Role" />
    </div>

    <div class="mb-3">
        <label class="form-label">PhotoUrl</label>
        <input class="form-control" asp-for="PhotoUrl" />
    </div>

    <div class="mb-3">
        <label class="form-label">Language</label>
        <select class="form-select" asp-for="Language">
            <option value="uk">UA</option>
            <option value="en">EN</option>
            <option value="nl">NL</option>
        </select>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
