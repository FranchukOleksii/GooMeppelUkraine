@model IEnumerable<GooMeppelUkraine.Web.Models.Stat>

<!-- STATS -->
@if (Model != null && Model.Any())
{
@*     <h2 class="h4 mt-4">Our work on numbers</h2> *@
    <div class="row g-3">
        @foreach (var s in Model)
        {
            <div class="col-12 col-md-4">
                <div class="border rounded p-3 h-100">
                    <div class="display-6">@s.Value</div>
                    <div class="text-muted">@s.Label</div>
                </div>
            </div>
        }
    </div>
}