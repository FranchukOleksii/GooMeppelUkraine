<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>@(ViewData["MetaTitle"] ?? "Goo Meppel Ukraine")</title>

    @if (ViewData["MetaDescription"] is string desc && !string.IsNullOrWhiteSpace(desc))
    {
        <meta name="description" content="@desc" />
    }

    @RenderSection("Head", required: false)

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GooMeppelUkraine.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">GooMeppelUkraine</a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation" id="mainNavbar" class="collapse navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="News" asp-action="Index">News</a>
                        </li>


                        @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Admin") || User.IsInRole("Editor")))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    Manage
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="NewsManage" asp-action="Index">News</a></li>
                                    <li><a class="dropdown-item" asp-controller="PartnersManage" asp-action="Index">Partners</a></li>
                                    <li><a class="dropdown-item" asp-controller="TeamManage" asp-action="Index">Team</a></li>
                                    <li><a class="dropdown-item" asp-controller="StatsManage" asp-action="Index">Stats</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Users">Users</a>
                            </li>
                        }


                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    Account
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="/profile">Profile</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-link dropdown-item px-0">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                @(
                                    System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "uk"
                                    ? "UA"
                                    : System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName.ToUpper()
                                )
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <form method="post" asp-controller="Language" asp-action="Set" class="px-3 py-1">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                        <input type="hidden" name="culture" value="uk" />
                                        <button type="submit" class="btn btn-link dropdown-item px-0">UA</button>
                                    </form>
                                </li>
                                <li>
                                    <form method="post" asp-controller="Language" asp-action="Set" class="px-3 py-1">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                        <input type="hidden" name="culture" value="en" />
                                        <button type="submit" class="btn btn-link dropdown-item px-0">EN</button>
                                    </form>
                                </li>
                                <li>
                                    <form method="post" asp-controller="Language" asp-action="Set" class="px-3 py-1">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                        <input type="hidden" name="culture" value="nl" />
                                        <button type="submit" class="btn btn-link dropdown-item px-0">NL</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="container">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - GooMeppelUkraine.Web
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
