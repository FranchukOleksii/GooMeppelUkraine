@model GooMeppelUkraine.Web.Models.Stat

<h2>Edit Stats</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Value</label>
        <input class="form-control" asp-for="Value" />
        <span class="text-danger" asp-validation-for="Value"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Label</label>
        <input class="form-control" asp-for="Label" />
    </div>

    <div class="mb-3">
        <label class="form-label">Language</label>
        <select class="form-select" asp-for="Language">
            <option value="uk">uk</option>
            <option value="en">en</option>
            <option value="nl">nl</option>
        </select>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
