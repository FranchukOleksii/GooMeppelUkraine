@model IEnumerable<GooMeppelUkraine.Web.Models.Article>

<h1 class="mb-3">Articles</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Create new article</a>
</p>
<table class="table table-bordered table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Lang</th>
            <th>Slug</th>
            <th>Published</th>
            <th>Created (UTC)</th>
            <th style="width: 260px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Id</td>
                <td>@a.Title</td>
                <td>@a.Language</td>
                <td>@a.Slug</td>
                <td>
                    @if (a.IsPublished)
                    {
                        <span class="badge bg-success">Published</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Draft</span>
                    }
                </td>
                <td>@a.CreatedAtUtc.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="text-nowrap">
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@a.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Preview" asp-route-id="@a.Id">Preview</a>
                    @if (a.IsPublished)
                    {
                        <form asp-action="Unpublish" asp-route-id="@a.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-warning">Unpublish</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Publish" asp-route-id="@a.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-success">Publish</button>
                        </form>
                    }
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@a.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>