@model List<GooMeppelUkraine.Web.Models.Article>

<h1 class="mb-4">News</h1>

<div class="row g-3">
    @foreach (var a in Model)
    {
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100">
                @if (!string.IsNullOrWhiteSpace(a.ImageUrl))
                {
                    <img src="@a.ImageUrl" class="card-img-top" alt="@a.Title" style="object-fit:cover; height:200px;">
                }

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@a.Title</h5>

                    <div class="mt-auto">
                        <a class="btn btn-primary btn-sm" href="/news/@a.Slug">Read</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
